<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APEX.Mobile.Views.SayimEkrani"
             Title="Aktif Sayım"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Üst Bilgi -->
        <Border Grid.Row="0" 
                BackgroundColor="#2196F3" 
                Padding="20"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.2" Radius="10" Offset="0,3"/>
            </Border.Shadow>

            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Aktif Sayım" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label x:Name="SayimTarihLabel" 
                           Text="12 Ocak 2025 - 14:30" 
                           FontSize="14" 
                           TextColor="White" 
                           Opacity="0.9"/>
                </VerticalStackLayout>

                <!-- Temizle Butonu -->
                <Button Grid.Column="1"
                        x:Name="TemizleButonu"
                        Text="🗑️"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        FontSize="20"
                        WidthRequest="50"
                        HeightRequest="50"
                        CornerRadius="25"
                        Clicked="TemizleButton_Clicked"
                        VerticalOptions="Center"
                        IsVisible="False"/>

                <!-- Toplam Badge -->
                <Border Grid.Column="2"
                        BackgroundColor="#1976D2"
                        Padding="15,10"
                        StrokeThickness="0"
                        VerticalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Sayılan:" 
                               FontSize="14" 
                               TextColor="White" 
                               Opacity="0.9"
                               HorizontalOptions="Center"/>
                        <Label x:Name="ToplamUrunLabel" 
                               Text="0 adet" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>

        <!-- Ürün Listesi -->
        <CollectionView x:Name="UrunListesi" 
                        Grid.Row="1" 
                        Margin="15,10"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#E0E0E0" 
                            StrokeThickness="1" 
                            BackgroundColor="White" 
                            Margin="0,8" 
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="8" Offset="0,4"/>
                        </Border.Shadow>

                        <Grid ColumnDefinitions="*,Auto" 
                              RowDefinitions="Auto,Auto,Auto"
                              RowSpacing="12"
                              ColumnSpacing="15">

                            <!-- 1. SATIR: Ürün Adı -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Adi}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="#1A1A1A"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2"
                                   VerticalOptions="Center"/>

                            <!-- 2. SATIR: Sayılan Miktar ve Sil Butonu -->
                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" 
                                                   Spacing="15" 
                                                   VerticalOptions="Center">
                                
                                <!-- Sayılan Miktar Kontrolleri -->
                                <HorizontalStackLayout Spacing="10">
                                    <Button Text="−" 
                                            WidthRequest="42" 
                                            HeightRequest="42" 
                                            BackgroundColor="#F44336" 
                                            TextColor="White" 
                                            FontSize="24" 
                                            FontAttributes="Bold"
                                            CornerRadius="21"
                                            Padding="0"
                                            Margin="0"
                                            Clicked="AzaltButton_Clicked"
                                            CommandParameter="{Binding}">
                                        <Button.Shadow>
                                            <Shadow Brush="Black" Opacity="0.15" Radius="3" Offset="0,2"/>
                                        </Button.Shadow>
                                    </Button>

                                    <Entry Text="{Binding SayilanMiktar}" 
                                           FontSize="20" 
                                           FontAttributes="Bold" 
                                           TextColor="#1A1A1A" 
                                           BackgroundColor="White"
                                           VerticalOptions="Center" 
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center"
                                           Keyboard="Numeric"
                                           WidthRequest="80"
                                           HeightRequest="50"
                                           Completed="MiktarEntry_Completed">
                                        <Entry.Shadow>
                                            <Shadow Brush="Black" Opacity="0.1" Radius="2" Offset="0,1"/>
                                        </Entry.Shadow>
                                    </Entry>

                                    <Button Text="+" 
                                            WidthRequest="42" 
                                            HeightRequest="42" 
                                            BackgroundColor="#4CAF50" 
                                            TextColor="White" 
                                            FontSize="24" 
                                            FontAttributes="Bold"
                                            CornerRadius="21"
                                            Padding="0"
                                            Margin="0"
                                            Clicked="ArtirButton_Clicked"
                                            CommandParameter="{Binding}">
                                        <Button.Shadow>
                                            <Shadow Brush="Black" Opacity="0.15" Radius="3" Offset="0,2"/>
                                        </Button.Shadow>
                                    </Button>
                                </HorizontalStackLayout>

                                <!-- Fark Göstergesi -->
                                <Border VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        WidthRequest="60"
                                        HeightRequest="60"
                                        StrokeThickness="0"
                                        Padding="0">
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding FarkDurumu}" Value="Pozitif">
                                            <Setter Property="BackgroundColor" Value="#4CAF50"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding FarkDurumu}" Value="Negatif">
                                            <Setter Property="BackgroundColor" Value="#F44336"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding FarkDurumu}" Value="Esit">
                                            <Setter Property="BackgroundColor" Value="#9E9E9E"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <Border.StrokeShape>
                                        <Ellipse/>
                                    </Border.StrokeShape>
                                    <Border.Shadow>
                                        <Shadow Brush="Black" Opacity="0.15" Radius="3" Offset="0,2"/>
                                    </Border.Shadow>
                                    <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                        <Label Text="Fark" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"/>
                                        <Label Text="{Binding FarkText}"
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </Border>
                            </HorizontalStackLayout>

                            <!-- Sil Butonu - 2. satırda sağda -->
                            <Button Grid.Row="1" Grid.Column="1"
                                    Text="🗑️"
                                    BackgroundColor="#F44336"
                                    TextColor="White"
                                    FontSize="16"
                                    WidthRequest="45"
                                    HeightRequest="45"
                                    CornerRadius="22"
                                    Clicked="SilButton_Clicked"
                                    CommandParameter="{Binding}"
                                    VerticalOptions="Center">
                                <Button.Shadow>
                                    <Shadow Brush="Black" Opacity="0.2" Radius="4" Offset="0,2"/>
                                </Button.Shadow>
                            </Button>

                            <!-- 3. SATIR: Barkod ve Depo Bilgisi -->
                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Spacing="10">
                                
                                <!-- Barkod -->
                                <Border BackgroundColor="#37474F"
                                        Padding="10,6"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Label FontSize="12" TextColor="White">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="📊 "/>
                                                <Span Text="Barkod: " FontAttributes="Bold"/>
                                                <Span Text="{Binding Barkod}" FontAttributes="Bold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Border>

                                <!-- Depo Stoğu -->
                                <Border BackgroundColor="#1976D2"
                                        Padding="10,6"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Label FontSize="12" TextColor="White">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="📦 "/>
                                                <Span Text="Depo: " FontAttributes="Bold"/>
                                                <Span Text="{Binding MevcutStok}" FontAttributes="Bold"/>
                                                <Span Text=" "/>
                                                <Span Text="{Binding Birim}" FontAttributes="Bold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Border>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="15"
                                     Padding="40">
                    <Label Text="📦" 
                           FontSize="64" 
                           HorizontalOptions="Center"/>
                    <Label Text="Henüz ürün eklenmedi" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#666" 
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Barkod okutarak sayıma başlayın" 
                           FontSize="14" 
                           TextColor="#999"
                           HorizontalTextAlignment="Center"/>
                    <Border BackgroundColor="#E3F2FD"
                            Padding="15,10"
                            StrokeThickness="0"
                            Margin="0,10,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label FontSize="12" TextColor="#1976D2" HorizontalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="💡 İpucu: " FontAttributes="Bold"/>
                                    <Span Text="Kamera butonu ile barkod okutun"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Border>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Alt Butonlar -->
        <Border Grid.Row="2" 
                BackgroundColor="White"
                Padding="10"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,-2"/>
            </Border.Shadow>

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">

                <Button Text="📷 Kamera" 
                        BackgroundColor="#2196F3" 
                        TextColor="White" 
                        FontSize="14" 
                        FontAttributes="Bold"
                        HeightRequest="55"
                        CornerRadius="12"
                        Clicked="BarkodOkutButton_Clicked"/>

                <Button Grid.Column="1"
                        Text="⌨️ Manuel" 
                        BackgroundColor="#FF9800" 
                        TextColor="White" 
                        FontSize="14" 
                        FontAttributes="Bold"
                        HeightRequest="55"
                        CornerRadius="12"
                        Clicked="ManuelGirisButton_Clicked"/>

                <Button Grid.Column="2" 
                        Text="✓ Tamamla" 
                        BackgroundColor="#4CAF50" 
                        TextColor="White" 
                        FontSize="14" 
                        FontAttributes="Bold"
                        HeightRequest="55"
                        CornerRadius="12"
                        Clicked="TamamlaButton_Clicked"/>
            </Grid>
        </Border>
    </Grid>

</ContentPage>
