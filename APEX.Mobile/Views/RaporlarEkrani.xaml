<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="APEX.Mobile.Views.RaporlarEkrani"
             Title="Raporlar"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*">

        <!-- Üst Filtre Alanı -->
        <Border Grid.Row="0" 
                BackgroundColor="White" 
                Padding="15"
                Margin="10,10,10,5"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="12">

                <!-- Tarih Filtresi Başlığı ve Picker -->
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Tarih Filtresi" 
                               FontSize="13" 
                               FontAttributes="Bold"
                               TextColor="#333"
                               Margin="0,0,0,5"/>
                        <Picker x:Name="TarihFiltresi" 
                                SelectedIndexChanged="TarihFiltresi_Changed"
                                BackgroundColor="#F8F9FA"
                                TextColor="#333"
                                FontSize="14">
                            <Picker.Items>
                                <x:String>Bugün</x:String>
                                <x:String>Son 7 Gün</x:String>
                                <x:String>Son 30 Gün</x:String>
                                <x:String>Bu Ay</x:String>
                                <x:String>Tüm Zamanlar</x:String>
                                <x:String>Özel Tarih Aralığı</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Temizle Butonu -->
                    <Button Grid.Column="1"
                            x:Name="TemizleButonu"
                            Text="Temizle"
                            BackgroundColor="#FF5252"
                            TextColor="White"
                            FontSize="12"
                            Padding="15,8"
                            CornerRadius="8"
                            VerticalOptions="End"
                            Clicked="Temizle_Clicked"
                            IsVisible="False"/>
                </Grid>

                <!-- Özel Tarih Seçimi Alanı -->
                <Border x:Name="OzelTarihAlani" 
                        IsVisible="False"
                        BackgroundColor="#F8F9FA"
                        Padding="12"
                        StrokeThickness="1"
                        Stroke="#E0E0E0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="12">

                        <!-- Başlangıç Tarihi -->
                        <Grid ColumnDefinitions="100,*" ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="Başlangıç:" 
                                   FontSize="13" 
                                   FontAttributes="Bold"
                                   TextColor="#555"
                                   VerticalOptions="Center"/>
                            <Border Grid.Column="1"
                                    BackgroundColor="White"
                                    Padding="8"
                                    StrokeThickness="1"
                                    Stroke="#DDD">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <DatePicker x:Name="BaslangicTarihi" 
                                            Format="dd MMMM yyyy"
                                            DateSelected="OzelTarih_Selected"
                                            TextColor="#333"
                                            FontSize="13"
                                            BackgroundColor="Transparent"/>
                            </Border>
                        </Grid>

                        <!-- Bitiş Tarihi -->
                        <Grid ColumnDefinitions="100,*" ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="Bitiş:" 
                                   FontSize="13" 
                                   FontAttributes="Bold"
                                   TextColor="#555"
                                   VerticalOptions="Center"/>
                            <Border Grid.Column="1"
                                    BackgroundColor="White"
                                    Padding="8"
                                    StrokeThickness="1"
                                    Stroke="#DDD">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <DatePicker x:Name="BitisTarihi" 
                                            Format="dd MMMM yyyy"
                                            DateSelected="OzelTarih_Selected"
                                            TextColor="#333"
                                            FontSize="13"
                                            BackgroundColor="Transparent"/>
                            </Border>
                        </Grid>

                        <!-- Filtrele Butonu -->
                        <Button Text="🔍 Filtrele"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                Padding="0,12"
                                CornerRadius="8"
                                Clicked="Filtrele_Clicked"/>

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </Border>

        <!-- Sayım Listesi -->
        <CollectionView x:Name="SayimListesi" 
                        Grid.Row="1" 
                        Margin="10,5,10,10"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="#E0E0E0" 
                            StrokeThickness="1" 
                            BackgroundColor="White" 
                            Margin="0,5" 
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.05" Radius="4" Offset="0,1"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Sayim_Tapped" CommandParameter="{Binding}"/>
                        </Border.GestureRecognizers>

                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                            <!-- Tarih -->
                            <Label Text="{Binding Tarih, StringFormat='{0:dd MMMM yyyy - HH:mm}'}" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#1A1A1A"/>

                            <!-- Kullanıcı -->
                            <Label Grid.Row="1" 
                                   FontSize="13" 
                                   TextColor="#666"
                                   Margin="0,4,0,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="👤 " FontSize="12"/>
                                        <Span Text="{Binding Kullanici}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <!-- Ürün ve Fark Bilgisi -->
                            <Grid Grid.Row="2" 
                                  ColumnDefinitions="Auto,Auto" 
                                  ColumnSpacing="20" 
                                  Margin="0,8,0,0">
                                <Border Grid.Column="0"
                                        BackgroundColor="#E3F2FD"
                                        Padding="8,4"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Label FontSize="12" TextColor="#1976D2">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="📦 " FontSize="11"/>
                                                <Span Text="Ürün: " FontAttributes="Bold"/>
                                                <Span Text="{Binding ToplamUrun}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Border>

                                <Border Grid.Column="1"
                                        BackgroundColor="#FFF3E0"
                                        Padding="8,4"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Label FontSize="12" TextColor="#F57C00">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="📊 " FontSize="11"/>
                                                <Span Text="Fark: " FontAttributes="Bold"/>
                                                <Span Text="{Binding ToplamFark}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Border>
                            </Grid>

                            <!-- İndirme Butonları -->
                            <Grid Grid.Row="3" 
                                  ColumnDefinitions="*,*" 
                                  ColumnSpacing="10" 
                                  Margin="0,12,0,0">
                                <Button Grid.Column="0"
                                        Text="📄 PDF" 
                                        BackgroundColor="#D32F2F" 
                                        TextColor="White"
                                        Clicked="PdfIndir_Clicked"
                                        CommandParameter="{Binding}"
                                        FontSize="13"
                                        FontAttributes="Bold"
                                        Padding="0,10"
                                        CornerRadius="8"/>
                                <Button Grid.Column="1"
                                        Text="📊 Excel" 
                                        BackgroundColor="#107C41" 
                                        TextColor="White"
                                        Clicked="ExcelIndir_Clicked"
                                        CommandParameter="{Binding}"
                                        FontSize="13"
                                        FontAttributes="Bold"
                                        Padding="0,10"
                                        CornerRadius="8"/>
                            </Grid>

                            <!-- Durum Badge -->
                            <Border Grid.Column="1" 
                                    Grid.RowSpan="3"
                                    BackgroundColor="#4CAF50"
                                    Padding="10,6"
                                    VerticalOptions="Start"
                                    StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15"/>
                                </Border.StrokeShape>
                                <Label Text="{Binding Durum}" 
                                       FontSize="11" 
                                       TextColor="White"
                                       FontAttributes="Bold"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center"
                                     Spacing="15"
                                     Padding="40">
                    <Label Text="📊" 
                           FontSize="64" 
                           HorizontalOptions="Center"/>
                    <Label Text="Henüz sayım yapılmamış" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#666" 
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Sayım ekranından yeni sayım başlatabilirsiniz" 
                           FontSize="14" 
                           TextColor="#999"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

    </Grid>

</ContentPage>
