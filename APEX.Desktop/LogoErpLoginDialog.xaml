<Window x:Class="APEX.Desktop.LogoErpLoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logo ERP Bağlantısı" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Border Background="White" CornerRadius="10" Margin="20" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>
            
            <StackPanel Margin="30">
                <TextBlock Text="Logo ERP Bağlantı Ayarları" 
                         FontSize="24" FontWeight="Bold" 
                         Foreground="#1976D2" 
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,30"/>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Sunucu Adresi:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1" x:Name="ServerTextBox" Height="35" Padding="10,8" 
                           FontSize="14" Margin="0,0,0,15" Text="localhost"/>
                    
                    <TextBlock Grid.Row="2" Text="Veritabanı:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" x:Name="DatabaseTextBox" Height="35" Padding="10,8" 
                           FontSize="14" Margin="0,0,0,15" Text="LOGO_DB"/>
                    
                    <TextBlock Grid.Row="4" Text="Kullanıcı Adı:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="5" x:Name="UsernameTextBox" Height="35" Padding="10,8" 
                           FontSize="14" Margin="0,0,0,15"/>
                    
                    <TextBlock Grid.Row="6" Text="Şifre:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox Grid.Row="7" x:Name="PasswordBox" Height="35" Padding="10,8" 
                               FontSize="14" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Test Bağlantısı" Style="{StaticResource ModernButtonStyle}" 
                              Background="#FF9800" Click="TestConnection_Click" Width="120"/>
                        <Button Content="Bağlan" Style="{StaticResource ModernButtonStyle}" 
                              Background="#4CAF50" Click="Connect_Click" Width="80"/>
                        <Button Content="İptal" Style="{StaticResource ModernButtonStyle}" 
                              Background="#F44336" Click="Cancel_Click" Width="80"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>