<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    x:Class="APEX.Desktop.DevDashboard"
    Title="ModuleX" Height="800" Width="1000"
    >
    <DockPanel LastChildFill="True">
        <dxr:RibbonStatusBarControl DockPanel.Dock="Bottom"/>
        <dxwui:HamburgerMenu Height="772">
            <dxwui:HamburgerMenu.BottomBarItems>
                <dxwui:HamburgerMenuBottomBarNavigationButton Content="Settings" GlyphHeight="16" GlyphWidth="16"/>
                <dxwui:HamburgerMenuBottomBarNavigationButton Content="About" GlyphHeight="16" GlyphWidth="16"/>
            </dxwui:HamburgerMenu.BottomBarItems>
            <dxwui:HamburgerMenu.Content>
                <dxwui:NavigationFrame/>
            </dxwui:HamburgerMenu.Content>
            <dxwui:HamburgerMenuNavigationButton Content="Ana Sayfa" GlyphHeight="16" GlyphWidth="16" IsSelected="True"/>
            <dxwui:HamburgerMenuNavigationButton Content="POS Yönetimi" GlyphHeight="16" GlyphWidth="16" Click="HamburgerMenuNavigationButton_Click"/>
            <dxwui:HamburgerMenuNavigationButton Content="Siparişler" GlyphHeight="16" GlyphWidth="16" Click="HamburgerMenuNavigationButton_Click"/>
            <dxwui:HamburgerMenuNavigationButton Content="Depo Yönetimi" GlyphHeight="16" GlyphWidth="16" Click="HamburgerMenuNavigationButton_Click"/>
            <dxwui:HamburgerMenuNavigationButton Content="İş Zekası" GlyphHeight="16" GlyphWidth="16" Click="HamburgerMenuNavigationButton_Click"/>
            <dxwui:HamburgerMenuNavigationButton Content="İnsan Kaynakları" GlyphHeight="16" GlyphWidth="16" Click="HamburgerMenuNavigationButton_Click"/>
            <dxwui:HamburgerMenuNavigationButton Content="Raporlar" GlyphHeight="16" GlyphWidth="16" Click="HamburgerMenuNavigationButton_Click"/>



            <dxwui:HamburgerMenuHyperlinkButton Content="Ayarlar" NavigateUri="#Settings"/>
            <dxwui:HamburgerMenuHyperlinkButton Content="Destek" NavigateUri="#Support"/>
        </dxwui:HamburgerMenu>
    </DockPanel>
</dx:ThemedWindow>
